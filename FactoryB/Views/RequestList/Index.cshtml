﻿@{
    ViewData["ParentTitle"] = "Quản lý kho";
    ViewData["Title"] = "Quản lý yêu cầu";
}

@section Styles {
}

    @section Scripts {
    <script src="~/assets/plugins/custom/datatables/datatables.bundle.js"></script>
    <script src="~/js/requestmanagement/request.js"></script>
}
    @*begin::Table*@
    <div class="card">
        <div class="card-header px-5">
            <div class="card-title">
                <div class="d-flex align-items-center position-relative">
                    <!--begin::Svg Icon | path: icons/duotune/general/gen021.svg-->
                    <span class="svg-icon svg-icon-3 svg-icon-gray-500 position-absolute top-50 translate-middle ms-6">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
                            <rect opacity="0.5" x="17.0365" y="15.1223" width="8.15546" height="2" rx="1" transform="rotate(45 17.0365 15.1223)" fill="currentColor" />
                            <path d="M11 19C6.55556 19 3 15.4444 3 11C3 6.55556 6.55556 3 11 3C15.4444 3 19 6.55556 19 11C19 15.4444 15.4444 19 11 19ZM11 5C7.53333 5 5 7.53333 5 11C5 14.4667 7.53333 17 11 17C14.4667 17 17 14.4667 17 11C17 7.53333 14.4667 5 11 5Z" fill="currentColor" />
                        </svg>
                    </span>
                    <!--end::Svg Icon-->
                    <input type="text" id="input_search" class="form-control form-control-solid w-250px ps-10" placeholder="tìm kiếm" />
                </div>
            </div>
            <div class="card-toolbar">
                <button class="btn btn-primary me-3 ps-5" id="btn_modal_insert_request">
                    <!--begin::Svg Icon | path: icons/duotune/general/gen031.svg-->
                    <span class="svg-icon svg-icon-2 m-0">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
                            <rect opacity="0.3" x="2" y="2" width="20" height="20" rx="10" fill="currentColor" />
                            <rect x="10.8891" y="17.8033" width="12" height="2" rx="1" transform="rotate(-90 10.8891 17.8033)" fill="currentColor" />
                            <rect x="6.01041" y="10.9247" width="12" height="2" rx="1" fill="currentColor" />
                        </svg>
                    </span>
                    <!--end::Svg Icon-->Thêm từng yêu cầu
                </button>
                <button class="btn btn-primary me-3 ps-5" id="btn_modal_add_request">
                    <!--begin::Svg Icon | path: icons/duotune/general/gen031.svg-->
                    <span class="svg-icon svg-icon-2 m-0">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
                            <rect opacity="0.3" x="2" y="2" width="20" height="20" rx="10" fill="currentColor" />
                            <rect x="10.8891" y="17.8033" width="12" height="2" rx="1" transform="rotate(-90 10.8891 17.8033)" fill="currentColor" />
                            <rect x="6.01041" y="10.9247" width="12" height="2" rx="1" fill="currentColor" />
                        </svg>
                    </span>
                    <!--end::Svg Icon-->Thêm yêu cầu excel
                </button>
                <!--begin::Export-->
                <div>
                    <button type="button" class="btn btn-light-primary px-4 me-3" data-kt-menu-trigger="click" data-kt-menu-placement="bottom-end">
                        <!--begin::Svg Icon | path: icons/duotune/general/gen031.svg-->
                        <span class="svg-icon svg-icon-2 m-0">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
                                <rect opacity="0.3" x="12.75" y="4.25" width="12" height="2" rx="1" transform="rotate(90 12.75 4.25)" fill="currentColor" />
                                <path d="M12.0573 6.11875L13.5203 7.87435C13.9121 8.34457 14.6232 8.37683 15.056 7.94401C15.4457 7.5543 15.4641 6.92836 15.0979 6.51643L12.4974 3.59084C12.0996 3.14332 11.4004 3.14332 11.0026 3.59084L8.40206 6.51643C8.0359 6.92836 8.0543 7.5543 8.44401 7.94401C8.87683 8.37683 9.58785 8.34458 9.9797 7.87435L11.4427 6.11875C11.6026 5.92684 11.8974 5.92684 12.0573 6.11875Z" fill="currentColor" />
                                <path d="M18.75 8.25H17.75C17.1977 8.25 16.75 8.69772 16.75 9.25C16.75 9.80228 17.1977 10.25 17.75 10.25C18.3023 10.25 18.75 10.6977 18.75 11.25V18.25C18.75 18.8023 18.3023 19.25 17.75 19.25H5.75C5.19772 19.25 4.75 18.8023 4.75 18.25V11.25C4.75 10.6977 5.19771 10.25 5.75 10.25C6.30229 10.25 6.75 9.80228 6.75 9.25C6.75 8.69772 6.30229 8.25 5.75 8.25H4.75C3.64543 8.25 2.75 9.14543 2.75 10.25V19.25C2.75 20.3546 3.64543 21.25 4.75 21.25H18.75C19.8546 21.25 20.75 20.3546 20.75 19.25V10.25C20.75 9.14543 19.8546 8.25 18.75 8.25Z" fill="currentColor" />
                            </svg>
                        </span>
                        <!--end::Svg Icon-->
                    </button>
                    <!--begin::Menu 1-->
                    <div class="menu menu-sub menu-sub-dropdown mt-3" data-kt-menu="true">
                        <!--begin::Header-->
                        <div class="px-7 py-5">
                            <div class="fs-5 text-dark fw-bolder">Xuất file</div>
                        </div>
                        <!--end::Header-->
                        <!--begin::Separator-->
                        <div class="separator border-gray-200"></div>
                        <!--end::Separator-->
                        <!--begin::Content-->
                        <div class="px-7 py-5">
                            <div id="dt_tools"></div>
                        </div>
                        <!--end::Content-->
                    </div>
                    <!--end::Menu 1-->
                </div>
                <!--end::Export-->
                <!--begin::Filter-->
                <div>
                    <button type="button" class="btn btn-light-info px-4" data-kt-menu-trigger="click" data-kt-menu-placement="bottom-end">
                        <!--begin::Svg Icon | path: icons/duotune/general/gen031.svg-->
                        <span class="svg-icon svg-icon-2 m-0">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
                                <path d="M19.0759 3H4.72777C3.95892 3 3.47768 3.83148 3.86067 4.49814L8.56967 12.6949C9.17923 13.7559 9.5 14.9582 9.5 16.1819V19.5072C9.5 20.2189 10.2223 20.7028 10.8805 20.432L13.8805 19.1977C14.2553 19.0435 14.5 18.6783 14.5 18.273V13.8372C14.5 12.8089 14.8171 11.8056 15.408 10.964L19.8943 4.57465C20.3596 3.912 19.8856 3 19.0759 3Z" fill="currentColor" />
                            </svg>
                        </span>
                        <!--end::Svg Icon-->
                    </button>
                    <!--begin::Menu 1-->
                    <div class="menu menu-sub menu-sub-dropdown mt-3 w-300px w-md-325px" data-kt-menu="true">
                        <!--begin::Header-->
                        <div class="px-7 py-5">
                            <div class="fs-5 text-dark fw-bolder">Lọc</div>
                        </div>
                        <!--end::Header-->
                        <!--begin::Separator-->
                        <div class="separator border-gray-200"></div>
                        <!--end::Separator-->
                        <!--begin::Content-->
                        <div class="px-7 py-5" data-table-request-filter="form">
                            <div class="mb-5">
                                <label class="form-label fs-6 fw-bold">Mã linh kiện:</label>
                                @await Component.InvokeAsync("Bom")
                            </div>
                            <!--begin::Input group-->
                            <div class="mb-5">
                                <label class="form-label fs-6 fw-bold">Chuyền:</label>
                                @await Component.InvokeAsync("Line")
                            </div>
                            <!--end::Input group-->
                            <!--begin::Actions-->
                            <div class="d-flex justify-content-end">
                                <button class="btn btn-secondary fw-bold px-6 me-5" id="btn_reset_filter">Reset </button>
                                <button class="btn btn-primary fw-bold px-6" id="btn_filter">Apply</button>
                            </div>
                            <!--end::Actions-->
                        </div>
                        <!--end::Content-->
                    </div>
                    <!--end::Menu 1-->
                </div>
            </div>
            <!--end::Filter-->
        </div>

        <div class="card-body p-4">
            <table id="table_request" class="table table-striped border rounded gy-5 gs-7">
                <thead>
                    <tr class="fw-bold fs-6 text-gray-800">
                        <th class="text-center min-w-50px">ID</th>
                        <th>Chuyền</th>
                        <th>Mã linh kiện</th>
                        <th>Số lượng yêu cầu</th>
                        <th>Số lượng đã đọc</th>
                        <th>Trạng thái</th>
                        <th>Người tạo</th>
                        <th>Thời gian tạo</th>
                        <th class="text-end min-w-100px">Hành động</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
    @*end::Table*@

    @*begin::Upload request list*@
    <div class="modal fade" tabindex="-1" id="upl-request-list-modal" data-bs-backdrop="static">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Tải lên danh sách yêu cầu</h5>

                    <!--begin::Close-->
                    <div class="btn btn-icon btn-sm btn-active-light-primary ms-2" data-bs-dismiss="modal" aria-label="Close">
                        <span class="svg-icon svg-icon-2x"></span>
                    </div>
                    <!--end::Close-->
                </div>

                <div class="modal-body">
                    <h4 class="card-title">Danh sách request</h4>
                    <p class="text-muted">
                        Tệp được tải lên cần có định dạng đúng như tệp mẫu sau:
                        <a href="~/template/request-list-template.xlsx">request-list-template.xlsx</a>
                    </p>

                    <!--begin::Dropzone-->
                    <div class="dropzone" id="kt_file_upload_pl">
                        <!--begin::Message-->
                        <div class="dz-message needsclick">
                            <!--begin::Icon-->
                            <i class="bi bi-file-earmark-arrow-up text-primary fs-3x"></i>
                            <!--end::Icon-->
                            <!--begin::Info-->
                            <div class="ms-4">
                                <h3 class="fs-5 fw-bolder text-gray-900 mb-1">Thả tệp vào đây hoặc nhấp để tải lên.</h3>
                                <span class="fs-7 fw-bold text-gray-400">Mỗi lần chỉ tải lên 1 tệp</span>
                            </div>
                            <!--end::Info-->
                        </div>
                    </div>
                    <!--end::Dropzone-->
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-light" data-bs-dismiss="modal">Đóng</button>
                    <button type="button" class="btn btn-primary" id="btn_add">
                        <span class="indicator-label">
                            <span class="svg-icon svg-icon-2">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
                                    <path d="M21 22H3C2.4 22 2 21.6 2 21C2 20.4 2.4 20 3 20H21C21.6 20 22 20.4 22 21C22 21.6 21.6 22 21 22ZM11 6.59998V17C11 17.6 11.4 18 12 18C12.6 18 13 17.6 13 17V6.59998H11Z" fill="black" />
                                    <path opacity="0.3" d="M7 6.59999H17L12.7 2.3C12.3 1.9 11.7 1.9 11.3 2.3L7 6.59999Z" fill="black" />
                                </svg> Tải lên
                            </span>
                        </span>
                        <span class="indicator-progress">
                            Xin vui lòng đợi... <span class="spinner-border spinner-border-sm align-middle ms-2"></span>
                        </span>
                    </button>
                </div>
            </div>
        </div>
    </div>
    @*end::Upload request list*@

    <!--begin::Insert modal-->
    <div class="modal fade" tabindex="-1" id="kt-modal-insert">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Thêm yêu cầu mới</h5>
                    <div class="btn btn-icon btn-sm btn-active-light-primary ms-2" onclick="closeInsertModal()" aria-label="Close">
                        <span class="svg-icon svg-icon-2x">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
                                <rect opacity="0.3" x="2" y="2" width="20" height="20" rx="10" fill="currentColor" />
                                <rect x="7" y="15.3137" width="12" height="2" rx="1" transform="rotate(-45 7 15.3137)" fill="currentColor" />
                                <rect x="8.41422" y="7" width="12" height="2" rx="1" transform="rotate(45 8.41422 7)" fill="currentColor" />
                            </svg>
                        </span>
                    </div>
                </div>

                <div class="modal-body">
                    <div class="row mb-3">
                        <div class="input-group mb-5">
                            <label for="select_line" class="col-4 col-form-label">Chuyền</label>
                            @await Component.InvokeAsync("Line")
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="input-group mb-5">
                            <label for="inp-product-item-modal-insert" class="col-4 col-form-label">Mã thành phẩm</label>
                            <input id="inp-product-item-modal-insert" style="min-width:120px" type="text" class="form-control" placeholder="Mã thành phầm">
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="input-group mb-5">
                            <label for="inp-part-item-modal-insert" class="col-4 col-form-label">Mã linh kiện</label>
                            <input id="inp-part-item-modal-insert" style="min-width:120px" type="text" class="form-control" placeholder="Mã linh kiện">
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="input-group mb-5">
                            <label for="inp-qty-modal-insert" class="col-4 col-form-label">Số lượng</label>
                            <input id="inp-qty-modal-insert" style="min-width:120px" type="text" class="form-control" value="12">
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="input-group mb-5">
                            <input type="radio" id="lid" name="typeItem" onchange="changeTypeItem(this)" value="lid" class="col-2 col-form-label rdTypeItem">
                            <label for="html">LID</label><br>
                            <input type="radio" id="case" name="typeItem" onchange="changeTypeItem(this)" value="case" class="col-2 col-form-label rdTypeItem">
                            <label for="css">CASE</label><br>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-light" onclick="closeInsertModal()">Đóng</button>
                        <button type="button" class="btn btn-primary" id="btn-insert">Thêm mới</button>
                    </div>
            </div>
        </div>
    </div>
    <!--end::Insert modal-->
